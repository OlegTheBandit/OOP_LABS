<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">
    <EditText
        android:id="@+id/triangle_side1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First side"
        ></EditText>
    <EditText
        android:id="@+id/triangle_side2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/triangle_side1"
        android:hint="Second side"
        ></EditText>

    <EditText
        android:id="@+id/triangle_side3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Third side"
        android:layout_below="@id/triangle_side2"></EditText>

</RelativeLayout>